// Demo: Prompt User Action
// Shows how agents can ask users for input during execution

package "prompt-user-demo"

role Worker { can execute }

Agent Assistant : Worker {
  llm default = { provider: "openai", model: "gpt-4o-mini" }

  on greet(args: Json) {
    playbook """
    
    Pregunta al usuario su nombre, luego preguntale si quiere continuar y si quiere, entonces preguntale por su edad.

    Finalmente dale un saludo y bromea sobre su edad como se te ocurra.
    """
  }
}

run Assistant.greet({})
